@model IEnumerable<Weblogger.Models.Blog>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<a asp-action="Create" class="btn btn-primary">Create a new Blog</a>
<br />
<br />
@if (Model.Count() > 0)
{
<table class="table table-hover table-condensed">
    <tr class="row">
        <th>Title</th>
        <th>Date Created</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr class="row">
        <td>@item.Title</td>
        <td> @item.DateCreated.Date.ToShortDateString() </td>
        <td><a class="btn btn-primary glyphicon glyphicon-info-sign" asp-action="Details" asp-route-Id ="@item.Id"></a></td>
        
        <td><a class="btn btn-success glyphicon glyphicon-edit" asp-action="Edit" asp-route-Id ="@item.Id"></a></td>
        <td><a class="btn btn-danger glyphicon glyphicon-remove" asp-action="Delete" asp-route-Id ="@item.Id"></a></td>

    </tr>

    }
</table>
}
else
{
    <h4 class="alert-info"> No Blog has been created! Please create a Blog</h4>

}

